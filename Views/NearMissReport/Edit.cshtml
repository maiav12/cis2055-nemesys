@model EditNearMissReportViewModel

<h2>Edit Near Miss Report</h2>

<form asp-action="Edit" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" type="hidden" class="form-control" />

    <div class="form-group">
        <label asp-for="Title" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DateOfReport" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="DateOfReport" class="form-control" />
            <span asp-validation-for="DateOfReport" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DateAndTimeSpotted" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="DateAndTimeSpotted" class="form-control" />
            <span asp-validation-for="DateAndTimeSpotted" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="TypeOfHazard" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="TypeOfHazard" class="form-control" />
            <span asp-validation-for="TypeOfHazard" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="ReporterEmail" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="ReporterEmail" class="form-control" />
            <span asp-validation-for="ReporterEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ReporterPhone" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="ReporterPhone" class="form-control" />
            <span asp-validation-for="ReporterPhone" class="text-danger"></span>
        </div>
    </div>

    
    <div class="form-group">
        <label asp-for="Upvotes" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Upvotes" class="form-control" />
            <span asp-validation-for="Upvotes" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Update Near Miss Report" />
            <a asp-controller="Report" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Back to Report</a>
        </div>
    </div>
</form>

@*Inject JQuery validation scripts in Layout*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
